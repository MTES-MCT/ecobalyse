{
  "name": "ecobalyse",
  "version": "0.0.1",
  "description": "Accélérer l'affichage environnemental de la filière textile française",
  "author": "Ecobalyse <contact@beta.gouv.fr>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf dist && npm run build:init && parcel build index.html --public-url ./",
    "build:init": "./bin/update-version.sh && mkdir -p dist && cp -r public/* dist/",
    "server:build": "elm make src/Server.elm --optimize --output=server-app.js",
    "server:dev": "npm run server:build && nodemon server.js --config nodemon.json",
    "server:debug": "elm make src/Server.elm --output=server-app.js && nodemon server.js --config nodemon.json",
    "server:start": "npm run server:build && node server.js",
    "server:test": "npm run server:build && jest",
    "start:parcel": "parcel serve index.html --no-cache",
    "start:dev": "npm run build:init && concurrently -n \"watch,parcel,server\" -c \"green,cyan\" \"npm run start:parcel\" \"npm run server:dev\"",
    "start": "PARCEL_ELM_NO_DEBUG=1 npm run start:dev",
    "test:prepare": "node tests/prepare.js",
    "test:all": "npm run test:review && npm test && npm run server:test",
    "test:review": "npx elm-review",
    "test": "npm run test:prepare && elm-test",
    "elm-watch": "run-pty run-pty.json",
    "esbuild": "esbuild index.js --bundle --outfile=public/build/index.js"
  },
  "dependencies": {
    "@parcel/transformer-elm": "^2.6.2",
    "@parcel/transformer-image": "^2.6.2",
    "@parcel/transformer-sass": "^2.6.2",
    "@sentry/browser": "^7.5.1",
    "@sentry/node": "^7.5.1",
    "@sentry/tracing": "^7.5.1",
    "bootstrap": "^5.1.3",
    "cors": "^2.8.5",
    "elm": "^0.19.1-5",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "highcharts": "^10.2.0",
    "js-yaml": "^4.1.0",
    "parcel": "^2.6.2",
    "piwik": "^1.0.9",
    "rapidoc": "^9.3.3"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "elm-format": "^0.8.5",
    "elm-review": "^2.7.2",
    "elm-test": "^0.19.1-revision9",
    "elm-watch": "^1.0.2",
    "esbuild": "^0.15.7",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "run-pty": "^4.0.0",
    "supertest": "^6.2.4",
    "uglify-js": "^3.17.0"
  },
  "cacheDirectories": [
    "node_modules",
    "~/.elm"
  ]
}
