{
  "name": "ecobalyse",
  "version": "0.0.1",
  "description": "Accélérer l'affichage environnemental de la filière textile française",
  "author": "Ecobalyse <contact@beta.gouv.fr>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf dist && npm run build:init && elm-watch make --optimize && vite build",
    "build:init": "./bin/update-version.sh && mkdir -p dist && cp -r public/* dist/",
    "server:build": "elm-watch make server --optimize",
    "server:dev": "npm run server:build && nodemon server.js --config nodemon.json",
    "server:debug": "elm-watch make server && nodemon server.js --config nodemon.json",
    "server:start": "npm run server:build && node server.js",
    "server:test": "npm run server:build && jest",
    "start": "run-pty run-pty.json",
    "test:prepare": "node tests/prepare.js",
    "test:all": "npm run test:review && npm test && npm run server:test",
    "test:review": "npx elm-review",
    "test": "npm run test:prepare && elm-test",
    "vite-dev": "vite serve"
  },
  "dependencies": {
    "@sentry/browser": "^7.5.1",
    "@sentry/node": "^7.5.1",
    "@sentry/tracing": "^7.5.1",
    "bootstrap": "^5.1.3",
    "cors": "^2.8.5",
    "elm": "^0.19.1-5",
    "elm-watch": "^1.0.2",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "highcharts": "^10.2.0",
    "js-yaml": "^4.1.0",
    "piwik": "^1.0.9",
    "rapidoc": "^9.3.3"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "elm-format": "^0.8.5",
    "elm-review": "^2.7.2",
    "elm-test": "^0.19.1-revision9",
    "esbuild": "^0.15.7",
    "esbuild-sass-plugin": "^2.3.2",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "npm": "^8.19.2",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "run-pty": "^4.0.0",
    "supertest": "^6.2.4",
    "uglify-js": "^3.17.0",
    "vite": "^3.1.1"
  },
  "cacheDirectories": [
    "node_modules",
    "~/.elm"
  ]
}
