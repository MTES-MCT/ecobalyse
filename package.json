{
  "name": "wikicarbone",
  "version": "0.0.1",
  "description": "Accelérer l'affichage environnemental de la filière textile française",
  "author": "Wikicarbone <wikicarbone@beta.gouv.fr>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf dist && npm run build:init && parcel build index.html --public-url ./",
    "build:init": "mkdir -p dist && cp -r public/* dist/",
    "dump:presets": "elm make src/DumpPresets.elm --optimize --output=dump-presets-app.js && node dump-presets.js",
    "deploy": "npm run build && gh-pages --dist dist/",
    "server:start": "elm make src/Server.elm --output=server-app.js && node server.js",
    "start:parcel": "parcel serve index.html --no-cache",
    "start:filewatch": "chokidar 'src/**/!(Main).elm' -c 'touch src/Main.elm'",
    "start:dev": "npm run build:init && concurrently -n \"watch,parcel\" -c \"blue,green\" -k \"npm run start:filewatch\" \"npm run start:parcel\"",
    "start": "PARCEL_ELM_NO_DEBUG=1 npm run start:dev",
    "test:prepare": "node tests/prepare.js",
    "test": "npm run test:prepare && elm-test"
  },
  "devDependencies": {
    "@parcel/transformer-elm": "^2.0.0",
    "@parcel/transformer-image": "^2.0.0",
    "@parcel/transformer-sass": "^2.0.0",
    "bootstrap": "^5.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.2.1",
    "elm": "^0.19.1-5",
    "elm-analyse": "^0.16.5",
    "elm-format": "^0.8.5",
    "elm-test": "^0.19.1-revision7",
    "gh-pages": "^3.2.3",
    "parcel": "^2.0.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
