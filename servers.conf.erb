# this is the scalingo erb-templated nginx configuration that sits in front of express and django
upstream express {
	server localhost:8001 fail_timeout=0;
}

upstream django {
	server localhost:8002 fail_timeout=0;
}

server {

	listen <%= ENV["PORT"] %>;
	server_name _;

	location / {
		proxy_pass http://express;
	}
	location ^~ /admin {
		proxy_pass http://django;
	}
	location ^~ /static {
		proxy_pass http://django;
	}
}
