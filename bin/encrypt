#!/usr/bin/env node

const { encryptFile } = require("../lib/crypto");

const path = `${__dirname}/../${process.argv[2]}`;
console.log(`Encrypting ${path}â€¦`);

try {
  encryptFile(path);
  console.log("Done.");
} catch (err) {
  console.error(`Couldn't encrypt ${path}:\n> ${err}`);
  process.exit(1);
}
